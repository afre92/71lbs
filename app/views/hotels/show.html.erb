<div class="content" style="height: 100%; padding-bottom: 80px;">

    <aside style="float: right;">
      <div class="mainforms">
        <h2 class="tittle"> Add a Visitor </h2>
        <%= render 'users/form' %>
      </div>
      <div class="mainforms">
        <h2 class="tittle" style="padding-top: 20px;"> Add a room </h2>
        <%= render 'rooms/form' %>
      </div>
    </aside>
    <div class="maintables">
  <table>
    <thead>
        <td><h1 class="tittle">Visitors</h1></td><br>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @hotel.users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><button><%= link_to 'Add reservation', user %></button></td>
          <td><button><%= link_to 'Edit', edit_user_path(user) %></button></td>
          <td><button><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <table>
    <thead>
      <th><h1 class="tittle">Rooms</h1></th>
      <tr>
        <th >Number</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @hotel.rooms.each do |room| %>
        <tr>
          <td><%= room.number %></td>
          <td><button><%= link_to 'Show Reservation', room %></button></td>
          <td><button><%= link_to 'Edit', edit_room_path(room) %></button></td>
          <td><button><%= link_to 'Delete', room, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
          <% end %>
    </tbody>
    </table>
        <br>
</div>
</div>
